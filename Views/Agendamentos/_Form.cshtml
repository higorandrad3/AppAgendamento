@model AgendamentoViewModel

<div class="row g-3">

    <!-- Nome -->
    <div class="col-md-6">
        <label asp-for="Nome" class="form-label fw-semibold"></label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>

    <!-- Nome do Representante do Município -->
    <div class="col-md-6">
        <label asp-for="NomeRepresentanteMunicipio" class="form-label fw-semibold"></label>
        <input asp-for="NomeRepresentanteMunicipio" class="form-control" />
        <span asp-validation-for="NomeRepresentanteMunicipio" class="text-danger"></span>
    </div>

    <!-- Município -->
    <div class="col-md-4">
        <label asp-for="MunicipioId" class="form-label fw-semibold"></label>
        <select asp-for="MunicipioId" asp-items="@Model.Municipios" class="form-select">
            <option value="">Selecione...</option>
        </select>
        <span asp-validation-for="MunicipioId" class="text-danger"></span>
    </div>

    <!-- Informado a -->
    <div class="col-md-4">
        <label asp-for="InformadoA" class="form-label fw-semibold"></label>
        <input asp-for="InformadoA" class="form-control" />
        <span asp-validation-for="InformadoA" class="text-danger"></span>
    </div>

    <!-- Destino -->
    <div class="col-md-4">
        <label asp-for="Destino" class="form-label fw-semibold"></label>
        <input asp-for="Destino" class="form-control" />
        <span asp-validation-for="Destino" class="text-danger"></span>
    </div>

    <!-- Agendado -->
    <div class="col-md-4">
        <label asp-for="Agendado" class="form-label fw-semibold"></label>
        <input asp-for="Agendado" type="time" class="form-control" />
        <span asp-validation-for="Agendado" class="text-danger"></span>
        @*@<span class="text-danger">@Html.ValidationMessage(nameof(Model.Agendado))</span>*@
    </div>

    <!-- Entrada -->
    <div class="col-md-4">
        <label asp-for="Entrada" class="form-label fw-semibold"></label>
        <input asp-for="Entrada" type="time" class="form-control" />
        <span asp-validation-for="Entrada" class="text-danger"></span>
    </div>

    <!-- Horário de Atendimento -->
    <div class="col-md-4">
        <label asp-for="HorarioAtendimento" class="form-label fw-semibold"></label>
        <input asp-for="HorarioAtendimento" type="time" class="form-control" />
        <span asp-validation-for="HorarioAtendimento" class="text-danger"></span>
    </div>

    <!-- Autorizado por -->
    <div class="col-md-4">
        <label asp-for="AutorizadoPor" class="form-label fw-semibold"></label>
        <input asp-for="AutorizadoPor" class="form-control" />
        <span asp-validation-for="AutorizadoPor" class="text-danger"></span>
    </div>

    <!-- Telefone -->
    <div class="col-md-4">
        <label asp-for="Telefone" class="form-label fw-semibold"></label>
        <input asp-for="Telefone" class="form-control" />
        <span asp-validation-for="Telefone" class="text-danger"></span>
    </div>

    <!-- Tipo de Documento -->
    <div class="col-md-4">
        <label asp-for="TipoDocumento" class="form-label fw-semibold"></label>
        <select asp-for="TipoDocumento" class="form-select">
            <option value="">Selecione...</option>
            <option value="CPF">CPF</option>
            <option value="Outro">Outro</option>
        </select>
        <span asp-validation-for="TipoDocumento" class="text-danger"></span>
    </div>

    <!-- Número do Documento -->
    <div class="col-md-4">
        <label asp-for="NumeroDocumento" class="form-label fw-semibold"></label>
        <input asp-for="NumeroDocumento" class="form-control" />
        <span asp-validation-for="NumeroDocumento" class="text-danger"></span>
    </div>

    <!-- Placa do Veículo -->
    <div class="col-md-4">
        <label asp-for="PlacaVeiculo" class="form-label fw-semibold"></label>
        <input asp-for="PlacaVeiculo" class="form-control" />
        <span asp-validation-for="PlacaVeiculo" class="text-danger"></span>
    </div>

</div>

<!-- Botões -->
<div class="mt-4">
    <button type="submit" class="btn btn-success px-4">Salvar</button>
    <a asp-action="Index" class="btn btn-secondary ms-2 px-4">Cancelar</a>
</div>